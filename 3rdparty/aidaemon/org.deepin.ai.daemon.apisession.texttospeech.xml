<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.deepin.ai.daemon.Session.TextToSpeech">
    <!-- Text-to-speech synthesis -->
    <method name="synthesizeText">
      <arg name="text" type="s" direction="in"/>
      <arg name="params" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    
    <!-- Stream-based synthesis -->
    <method name="startStreamSynthesis">
      <arg name="text" type="s" direction="in"/>
      <arg name="params" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    
    <method name="endStreamSynthesis">
      <arg name="streamSessionId" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    
    <!-- Control methods -->
    <method name="terminate">
    </method>
    
    <!-- Information methods -->
    <method name="getSupportedVoices">
      <arg type="as" direction="out"/>
    </method>
    
    <!-- Signals for stream synthesis -->
    <signal name="SynthesisResult">
      <arg name="streamSessionId" type="s"/>
      <arg name="audioData" type="ay"/>
    </signal>
    
    <signal name="SynthesisError">
      <arg name="streamSessionId" type="s"/>
      <arg name="errorCode" type="i"/>
      <arg name="errorMessage" type="s"/>
    </signal>
    
    <signal name="SynthesisCompleted">
      <arg name="streamSessionId" type="s"/>
      <arg name="finalAudio" type="ay"/>
    </signal>
  </interface>
</node>
