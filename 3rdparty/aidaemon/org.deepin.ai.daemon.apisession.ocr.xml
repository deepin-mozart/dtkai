<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.deepin.ai.daemon.Session.OCR">
    <!-- File-based OCR recognition -->
    <method name="recognizeFile">
      <arg name="imageFile" type="s" direction="in"/>
      <arg name="params" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    
    <!-- Image data-based OCR recognition -->
    <method name="recognizeImage">
      <arg name="imageData" type="ay" direction="in"/>
      <arg name="params" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    
    <!-- Region-based OCR recognition -->
    <method name="recognizeRegion">
      <arg name="imageFile" type="s" direction="in"/>
      <arg name="region" type="s" direction="in"/>
      <arg name="params" type="s" direction="in"/>
      <arg type="s" direction="out"/>
    </method>
    

    
    <!-- Control methods -->
    <method name="terminate">
    </method>
    
    <method name="cancel">
      <arg name="taskId" type="s" direction="in"/>
      <arg type="b" direction="out"/>
    </method>
    
    <!-- Information methods -->
    <method name="getSupportedLanguages">
      <arg type="as" direction="out"/>
    </method>
    
    <method name="getSupportedFormats">
      <arg type="as" direction="out"/>
    </method>
    
    <method name="getCapabilities">
      <arg type="s" direction="out"/>
    </method>
    
    <!-- Progress signals for long-running tasks -->
    <signal name="RecognitionProgress">
      <arg name="taskId" type="s"/>
      <arg name="progress" type="d"/>
      <arg name="message" type="s"/>
    </signal>
    
    <signal name="RecognitionCompleted">
      <arg name="taskId" type="s"/>
      <arg name="result" type="s"/>
    </signal>
    
    <signal name="RecognitionError">
      <arg name="taskId" type="s"/>
      <arg name="errorCode" type="i"/>
      <arg name="errorMessage" type="s"/>
    </signal>
    

  </interface>
</node>
